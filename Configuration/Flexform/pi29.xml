<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <sheets>
        <overview>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Konfiguration</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    
                    <settings.type>
                        <TCEforms>
                            <label>Type</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">White</numIndex>
                                        <numIndex index="1">0</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Grey</numIndex>
                                        <numIndex index="1">1</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.type>
                    
                    <settings.title>
                        <TCEforms>
                            <label>Title</label>
                            <config>
                                <type>input</type>
                                <size>255</size>
                            </config>
                        </TCEforms>
                    </settings.title>
                    
                    <settings.image>
                        <TCEforms>
                            <label>Image</label>
                            <config type="array">
                                <type>group</type>    
                                <internal_type>file</internal_type>
                                <allowed>jpg,jpeg,gif,png</allowed>                   
                                <max_size>10000</max_size>                 
                                <show_thumbs>1</show_thumbs>
                                <size>1</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.image>
          
                    <settings.subtitle>
                        <TCEforms>
                            <label>Subtitle</label>
                            <config>
                                <type>input</type>
                                <size>255</size>
                            </config>
                        </TCEforms>
                    </settings.subtitle>
                    
                    <settings.bodytext>
                        <TCEforms type="array">
                            <config type="array">
                                <type>text</type>
                                <cols>48</cols>
                                <rows>5</rows>
                            </config>
                            <label>Bodytext</label>
                            <defaultExtras>richtext[*]:rte_transform[flag=rte_enabled|mode=ts_css]</defaultExtras>
                        </TCEforms>
                    </settings.bodytext>
                </el>
            </ROOT>
        </overview>
    </sheets>
</T3DataStructure>

